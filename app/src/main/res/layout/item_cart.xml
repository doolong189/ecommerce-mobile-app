<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:background="@color/defaultColor"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/item_cart_imgView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image_def"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:background="@drawable/bg"
                android:textSize="11sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_cart_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_product"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_cart_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textStyle="bold"
                />
            <LinearLayout
                android:id="@+id/detail_lnBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/item_cart_imgSub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@drawable/bg_dropdown"
                    android:src="@drawable/baseline_horizontal_rule_24"/>
                <TextView
                    android:id="@+id/item_cart_tvQuantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="@string/zero"
                    android:textStyle="bold"
                    android:background="@drawable/bg_dropdown"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/item_cart_imgAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@drawable/bg_dropdown"
                    android:src="@drawable/baseline_add_24"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_cart_imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>